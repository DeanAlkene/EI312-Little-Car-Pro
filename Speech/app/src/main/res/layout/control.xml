<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <Button
        android:id="@+id/btn_forword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="427dp"
        android:text="向前" />

    <Button
        android:id="@+id/btn_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_forword"
        android:layout_toLeftOf="@+id/btn_forword"
        android:layout_toStartOf="@+id/btn_forword"
        android:text="向左" />

    <Button
        android:id="@+id/btn_leftup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_forword"
        android:layout_marginTop="-50dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_toStartOf="@+id/btn_forword"
        android:layout_toLeftOf="@+id/btn_forword"
        android:text="--" />

    <Button
        android:id="@+id/btn_leftdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_forword"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_toStartOf="@+id/btn_forword"
        android:layout_toLeftOf="@+id/btn_forword"
        android:text="--" />

    <Button
        android:id="@+id/btn_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_forword"
        android:layout_toEndOf="@+id/btn_forword"
        android:layout_toRightOf="@+id/btn_forword"
        android:text="向右" />

    <Button
        android:id="@+id/btn_rightdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_forword"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="48dp"
        android:layout_toEndOf="@+id/btn_forword"
        android:layout_toRightOf="@+id/btn_forword"
        android:text="--" />

    <Button
        android:id="@+id/btn_rightup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_forword"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="-48dp"
        android:layout_toEndOf="@+id/btn_forword"
        android:layout_toRightOf="@+id/btn_forword"
        android:text="--" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_right"
        android:layout_toEndOf="@+id/btn_left"
        android:layout_toRightOf="@+id/btn_left"
        android:text="向后" />

    <TextView
        android:id="@+id/tv_key_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_back"
        android:layout_centerHorizontal="true"
        android:text="停止" />


</RelativeLayout>
